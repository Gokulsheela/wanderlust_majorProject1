<% layout("/layouts/boilerplate") %>
<body>
    <br><br>
    <form method="post" action="/listings" nonvalidate class="needs-validation" enctype="multipart/form-data">
        <div class="row offset-3">
            <div class="col-8">
                <div class="mb-3">
                    <h1>Add New Listings</h1>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" placeholder="enter a catchy title" name="listing[title]" class="form-control" required>
                    <div class="valid-feedback">looks nice</div>
                    <div class="invalid-feedback">let's Give a Title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                <textarea placeholder="descriotion" name="listing[description]" class="form-control" required></textarea>
                <div class="invalid-feedback">write about it</div>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Image Link</label>
                <input type="file" placeholder="link/url" name="listing[image]" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" placeholder="1000" name="listing[price]" class="form-control" required >
                        <div class="invalid-feedback">invalid price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" placeholder="enter the location" name="listing[location]" class="form-control" required>
                        <div class="invalid-feedback">dont forgot the location</div>
                    </div>
                </div>
                
            <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input type="text" placeholder="India" name="listing[country]" class="form-control" required>
                <div class="invalid-feedback">Country name please</div>
            </div>
            <br>
                <button class="btn btn-dark add-btn">Add</button>
            </form><br><br>
         </div>
    </div>
</body>
